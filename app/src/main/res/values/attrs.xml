<resources>
    <declare-styleable name="AppWidgetAttrs">
        <attr name="appWidgetPadding" format="dimension" />
        <attr name="appWidgetInnerRadius" format="dimension" />
        <attr name="appWidgetRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="GlowView">
        <attr name="glowRadius" format="dimension" />
        <attr name="glowColor" format="color" />
        <attr name="glowWidth" format="float" />
        <attr name="glowHeight" format="float" />
    </declare-styleable>

    <declare-styleable name="GlowVerticalProgress">
        <attr name="testType">
            <enum name="thermometer" value="0"/>
            <enum name="alc_tester" value="1"/>
        </attr>
        <attr name="testValue" format="float" />
    </declare-styleable>

</resources>